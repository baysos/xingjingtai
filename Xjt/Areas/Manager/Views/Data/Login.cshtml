@{
    ViewBag.Title = "后台登录";
    Layout = null;
}
<title>@ViewBag.Title</title>
<link href="~/Style/roboto_condensed.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Style/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Style/font-icon-style.css" rel="stylesheet" />
<link href="~/Style/style.default.css" rel="stylesheet" />

<style type="text/css">
    .cl-blue{
        color: #2196f3;
    }
    .overlay {
        position: absolute;
        width: 100%;
        height: 100vh;
        z-index: 0;
        background: rgba(0, 0, 0, 0.66); 
        background: linear-gradient(to bottom, rgba(123, 67, 151, 0.35), rgba(33, 150, 243, 0.55));

    }

    .hero-area {
        height: 100vh;
        background-attachment: scroll;
        background-position: center center;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
  
    .hero-area {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .contact-h-cont {
        width: 500px;
        margin:0 auto;
        padding:30px;
        background: #fff;
        border-bottom: 4px solid #2196f3;
    }
</style>

<section class="hero-area">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="contact-h-cont">
                    <h3 class="text-center">
                        兴晶泰官网
                    </h3><br>
                    <form id="login-form">
                        <div class="form-group">
                            <label for="username">用户名</label>
                            <input type="text" class="form-control" id="username" placeholder="输入用户名" value="@ViewBag.pass"> 
                        </div>  
                        <div class="form-group">
                            <label for="exampleInputEmail1">密码</label>
                            <input class="form-control" type="password" value="" id="example-password-input" placeholder="输入密码"> 
                        </div>   
                        <button class="btn btn-general btn-blue" role="button"><i fa fa-right-arrow></i>登录</button>
                    </form>
                </div>
            </div>
        </div>  
    </div>
</section>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script type="text/javascript">
    $(function () {
        $('#login-form').on('submit', function () {
            var name = $('#username').val();
            var pass = $('#example-password-input').val();
            if (!name || !pass) {
                alert("请输入用户名或密码");
                return false;
            }
            $.ajax({
                type: 'post',
                url: '/manager/data/LoginCheck',
                data: {
                    'name': name,
                    'pass': pass
                },
                dataType: "json",
                success:function(data) {
                    if (data.code === 500) {
                        alert(data.data);
                        $('#example-password-input').val('');
                        return;
                    }

                    window.location = '/manager/data/index?s=' + data.data;
                }
            });
            return false;
        });
        
    });
</script>